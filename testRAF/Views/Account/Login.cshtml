@model testRAF.Models.LoginModel

@{
    ViewBag.Title = "Login";
}
@section style{
    <style type="text/css">
        .form-control {
            font-size: 16px;
            transition: all 0.4s;
            box-shadow: none;
        }

            .form-control:focus {
                border-color: #5cb85c;
            }

        .form-control, .btn {
            border-radius: 50px;
            outline: none !important;
        }

        .signin-form {
            width: 400px;
            margin: 0 auto;
            padding: 30px 0;
        }

            .signin-form form {
                border-radius: 5px;
                margin-bottom: 20px;
                background: #fff;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 40px;
            }

            .signin-form a {
                color: #5cb85c;
            }

            .signin-form h2 {
                text-align: center;
                font-size: 34px;
                margin: 10px 0 15px;
            }

            .signin-form .hint-text {
                color: #999;
                text-align: center;
                margin-bottom: 20px;
            }

            .signin-form .form-group {
                margin-bottom: 20px;
            }

            .signin-form .btn {
                font-size: 18px;
                line-height: 26px;
                font-weight: bold;
                text-align: center;
            }

            .signin-form .small {
                font-size: 13px;
            }

        .signup-btn {
            text-align: center;
            border-color: #5cb85c;
            transition: all 0.4s;
        }

            .signup-btn:hover {
                background: #5cb85c;
                opacity: 0.8;
            }

        .or-seperator {
            margin: 50px 0 15px;
            text-align: center;
            border-top: 1px solid #e0e0e0;
        }

            .or-seperator b {
                padding: 0 10px;
                width: 60px;
                height: 40px;
                font-size: 16px;
                text-align: center;
                line-height: 40px;
                background: #fff;
                display: inline-block;
                border: 1px solid #e0e0e0;
                border-radius: 50%;
                position: relative;
                top: -22px;
                z-index: 1;
            }

        .social-btn .btn {
            margin: 10px 0 0 30px;
            padding:9px;
            width: 55px;
            height: 55px;
            line-height: 38px;
            border-radius: 50%;
            font-weight: normal;
            text-align: center;
            border: none;
            transition: all 0.4s;
        }

            .social-btn .btn:first-child {
                margin-left: 0;
            }

            .social-btn .btn:hover {
                opacity: 0.8;
            }

        .social-btn .btn-primary {
            background: #507cc0;
        }

        .social-btn .btn-info {
            background: #64ccf1;
        }

        .social-btn .btn-danger {
            background: #df4930;
        }

        .social-btn .btn i {
            font-size: 30px;
            color:#ededed;
            
        }
    </style>
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="signin-form text-center" style="height:600px">

        <h2>Giriş Yap</h2>
        @*<p class="hint-text">Sosyal Medya hesabınızla giriş yapın</p>
        <div class="social-btn text-center">
            <a href="#" class="btn btn-primary btn-lg" title="Facebook"><i class="fab fa-facebook"></i></a>
            <a href="#" class="btn btn-info btn-lg" title="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" class="btn btn-danger btn-lg" title="Google"><i class="fab fa-google"></i></a>
        </div>
        <div class="or-seperator"><b>veya</b></div>*@
        <div class="form-group">
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control input-lg", placeholder = "Kullanıcı Adı", Required = "required" })
            @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", placeholder = "Şifre", Required = "required" })
            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block signup-btn">Giriş Yap</button>
        </div>
        @Html.ValidationMessage("Error", null, new { @class = "text text-danger" })
        @*<div class="text-center small"><a href="#">Şifremi unuttum</a></div>*@
        <br /><br />
        <div class="text-center small">Hesabın yok mu?<a href="/Account/Register"> Kaydol</a></div>
        
    </div>
}