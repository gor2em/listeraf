@model testRAF.Models.TheMovieDb
@using testRAF.Class;
@{
    ViewBag.Title = "Listeraf / Filmler";
}
<style>
    .container .paging {
        border-right: 1px solid #757575;
        padding: 10px;
        color: #ededed;
    }

        .container .paging:hover {
            background: #222;
        }

        .container .paging.active {
            background: #333;
        }

        .container .paging:last-child {
            border: none;
        }
</style>
<div id="main-margin">
    <div class="row">
        <div id="main-margin">
            @(new HtmlString(ViewBag.Result))
        </div>
        <div class="container" style="margin-top:30px">
            @using (Html.BeginForm("Index", "Filmler", FormMethod.Post))
            {
                PagingInfo pagingInfo = (PagingInfo)ViewBag.Paging;
                if (pagingInfo != null)
                {
                    @Html.PageLinks((PagingInfo)ViewBag.Paging, x => Url.Action("Index", "Filmler", new { mN = Model.movieName, page = x }))
                }
            }
        </div>
    </div>
</div>
