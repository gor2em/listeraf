
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/main.css")
    @Styles.Render("~/Content/images.css")
    @RenderSection("style", false)
</head>
<body>
    <!-- Side navigation -->
    <div class="sidenav">
        <a href='@Url.Action("Index","Admin")'>
            <img src='@Url.Content("~/src/img/logo/panel.png")' class="img-responsive" />
        </a>
        <hr />
        @Html.ActionLink("Üyeler", "Uyeler", "Admin")
        @Html.ActionLink("Listeler", "Listeler", "Admin")
        @Html.ActionLink("Yorumlar", "Yorumlar", "Admin")
        @Html.ActionLink("Geri Dön", "Index", "Home")
    </div>

    <!-- Page content -->
    <div class="main" style="margin-top:120px">
        <h2>@ViewBag.title</h2>
        <p class="text-right">@DateTime.Now</p>
        <hr />
        @RenderBody()


    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/main.js")
    @RenderSection("scripts", false)
    <script src="https://kit.fontawesome.com/7b87b7f8b4.js" crossorigin="anonymous"></script>
</body>
</html>
